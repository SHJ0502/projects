<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="options">
	<!-- 추가 옵션 등록 -->
	<insert id="insertOption" parameterClass="Option">
		insert into OPTION_TABLES
		(OPTION_NO, ITEM_NO, OPTION_TITLE, OPTION_PRICE)
		values
		(option_table_seq.nextval, #itemNo#, #title#, #price#)
	</insert>

	<select id="getOptionByNo" parameterClass="int" resultClass="Option">
		select
			OPTION_NO			as no,
			ITEM_NO				as itemNo,
			OPTION_TITLE		as title,
			OPTION_PRICE		as price
		from
			option_tables
		where
			item_no = #value#
	</select>

</sqlMap>